    <Style x:Key="QuickFilter" TargetType="{x:Type TextBox}">
        <Setter Property="Margin"
                        Value="0,0,0,5"/>
    </Style>

    <Style x:Key="TopMenuBar" TargetType="{x:Type WrapPanel}">
        <Setter Property="Background"
                        Value="{StaticResource AccentColorBrush4}"/>
    </Style>
    <Style x:Key="AppBar" TargetType="{x:Type Grid}">
        <Setter Property="Background"
                        Value="{StaticResource AccentColorBrush4}"/>
    </Style>

    <Style TargetType="{x:Type controls:AppBarButton}">
        <Setter Property="ToolTipService.Placement"
                Value="Bottom"/>
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="VerticalAlignment"
                Value="Top" />
        <Setter Property="Foreground"
                Value="Black" />
        <Setter Property="Width"
                Value="65" />
        <Setter Property="Margin"
                Value="5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AppBarButton}">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid HorizontalAlignment="Center" Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse x:Name="ellipse"
                                 Grid.Row="0"
                                 Fill="Transparent"
                                 Margin="4"
                                 Stroke="{TemplateBinding Foreground}"
                                 StrokeThickness="2" />
                            <Rectangle Width="15"
                                   Grid.Row="0"
                                   Height="15"
                                   Fill="{TemplateBinding Foreground}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Uniform" 
                                                 Visual="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Visual}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Grid>
                        <TextBlock Text="{TemplateBinding Content}"
                                   TextWrapping="Wrap"
                                   Grid.Row="1"
                                   Foreground="{TemplateBinding Foreground}"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Opacity"
                                    Value="0.4"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter Property="Background" 
                                    Value="{StaticResource AccentColorBrush4}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background" 
                                    Value="{StaticResource AccentColorBrush4}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="AppBarButtonContext" BasedOn="{StaticResource {x:Type controls:AppBarButton}}" TargetType="{x:Type controls:AppBarButton}">
    </Style>

    <Style x:Key="TopMenuButton" TargetType="{x:Type controls:AppBarButton}">
        <Setter Property="Background"
                        Value="{StaticResource AccentColorBrush3}" />
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Margin"
                        Value="2" />
        <Setter Property="Width"
                        Value="175" />
        <Setter Property="Height"
                        Value="60" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AppBarButton}">
                    <Border BorderBrush="Gray" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                        <Grid HorizontalAlignment="Left" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid HorizontalAlignment="Left">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Rectangle Grid.Row="0"
                                   Width="40"
                                   Height="40"
                                   Fill="Black">
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Stretch="Uniform">
                                            <VisualBrush.Visual>
                                                <ContentControl Content="{TemplateBinding Visual}" />
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Grid>
                            <TextBlock Text="{TemplateBinding Content}"
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   Grid.Column="2"
                                   
                                   TextAlignment="Left"
                                   HorizontalAlignment="Left"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Background"
                                    Value="{StaticResource AccentColorBrush2}"/>
                            <Setter Property="BorderThickness"
                                    Value="0"/>

                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background" 
                                    Value="{StaticResource AccentColorBrush2}"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MapButton" TargetType="{x:Type controls:AppBarButton}">
        <Setter Property="Background"
                        Value="White" />
        <Setter Property="BorderThickness"
                Value="1"/>
        <Setter Property="Margin"
                        Value="2" />
        <Setter Property="Width"
                        Value="50" />
        <Setter Property="Height"
                        Value="50" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AppBarButton}">
                    <Border BorderBrush="Gray" BorderThickness="0" Background="Transparent">
                        <Grid HorizontalAlignment="Center" Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse x:Name="ellipse"
                                 Grid.Row="0"
                                 Fill="{TemplateBinding Background}"
                                 Margin="4"
                                 Stroke="Gray"
                                 StrokeThickness="2" />
                            <Rectangle Width="18"
                                   Grid.Row="0"
                                   Height="18"
                                   Fill="{TemplateBinding Foreground}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Uniform" 
                                                 Visual="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Visual}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background" 
                                    Value="#FFC500"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PageIntroduction" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,0,15" />
    </Style>

    <Style x:Key="Subtitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AccentColorBrush}"/>
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>
    <Style x:Key="Title" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AccentColorBrush}"/>
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <Style x:Key="Header" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontSize" Value="46" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <Style x:Key="WideTileStyle" TargetType="mah:Tile">
        <Setter Property="Margin" Value="10" />
        <Setter Property="Width" Value="320" />
        <Setter Property="Height" Value="125" />
        <Setter Property="TitleFontSize" Value="14" />
    </Style>

    <Style TargetType="{x:Type controls:MultiSelectDataGrid}" BasedOn="{StaticResource {x:Type DataGrid}}">
    </Style>

    <Style x:Key="CustomGroupBox" TargetType="{x:Type GroupBox}" BasedOn="{StaticResource {x:Type GroupBox}}">
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <!-- Primary navigation tab controls -->
    <Style x:Key="PrimaryTabControl" TargetType="{x:Type mah:MetroAnimatedTabControl}" BasedOn="{StaticResource {x:Type mah:MetroAnimatedTabControl}}">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type mah:MetroAnimatedTabControl}">
                    <Grid KeyboardNavigation.TabNavigation="Local">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>
                        <TabPanel Name="HeaderPanel" Panel.ZIndex="1" Margin="0,0,0,5"  Grid.Row="0" Grid.Column="0" IsItemsHost="True" KeyboardNavigation.TabIndex="1"/>
                        <ContentPresenter Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="PrimaryTabItem" TargetType="{x:Type mah:MetroTabItem}" BasedOn="{StaticResource {x:Type mah:MetroTabItem}}">
    </Style>

    <!-- Secondary navigation tab controls -->
    <Style x:Key="SecondaryTabControl" TargetType="{x:Type mah:MetroAnimatedTabControl}" BasedOn="{StaticResource {x:Type mah:MetroAnimatedTabControl}}">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type mah:MetroAnimatedTabControl}">
                    <Grid KeyboardNavigation.TabNavigation="Local">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>
                        <TabPanel Name="HeaderPanel" Panel.ZIndex="1"  Margin="0,0,0,5"  Grid.Row="0" Grid.Column="0" IsItemsHost="True" KeyboardNavigation.TabIndex="2"/>
                        <ContentPresenter Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="SecondaryTabItem" TargetType="{x:Type mah:MetroTabItem}" BasedOn="{StaticResource {x:Type mah:MetroTabItem}}">
        <Setter Property="mah:ControlsHelper.HeaderFontSize"
                Value="25" />
        <Setter Property="mah:ControlsHelper.HeaderFontWeight" 
                Value="Bold"/>
    </Style>

    <!-- Side navigation tab control -->
    <Style x:Key="SideTabControl" TargetType="{x:Type mah:MetroAnimatedTabControl}">
        <Setter Property="TabStripPlacement" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabControl}">
                    <Grid KeyboardNavigation.TabNavigation="Local">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TabPanel Name="HeaderPanel" Background="{StaticResource AccentColorBrush4}" Panel.ZIndex="1" Margin="0"  Grid.Row="0" Grid.Column="0" IsItemsHost="True" KeyboardNavigation.TabIndex="3"/>
                        <ContentPresenter Grid.Row="0" Grid.Column="1" Margin="10,0,0,10" Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="SideTabItem" TargetType="{x:Type TabItem}">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="mah:ControlsHelper.HeaderFontSize" Value="18"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Name="Border">
                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        ContentSource="Header"
                                        Margin="20,10,10,10"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentColorBrush4}"/>
                            <Setter TargetName="Border" Property="TextBlock.Foreground" Value="Black"/>
                        </Trigger>
                        <Trigger SourceName="ContentSite" Property="IsMouseOver" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentColorBrush4}"/>
                            <Setter TargetName="Border" Property="TextBlock.Foreground" Value="Black"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
