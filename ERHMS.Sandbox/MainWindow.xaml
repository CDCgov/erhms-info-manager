<Window x:Class="ERHMS.Sandbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERHMS.Sandbox"
        mc:Ignorable="d"
        Title="{x:Static local:App.Title}" Width="800" Height="600">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="FileOpen_Click" />
                <Separator />
                <MenuItem Header="E_xit" Click="FileExit_Click" />
            </MenuItem>
        </Menu>
        <WrapPanel Name="Buttons" DockPanel.Dock="Top" HorizontalAlignment="Center" IsEnabled="False">
            <Button Click="Select_Click">Select</Button>
            <Button Click="Insert_Click">Insert</Button>
            <Button Click="Update_Click">Update</Button>
            <Button Click="Delete_Click">Delete</Button>
            <Button Click="Undelete_Click">Undelete</Button>
            <Button Click="Import_Click">Import</Button>
            <Button Click="Export_Click">Export</Button>
        </WrapPanel>
        <ScrollViewer>
            <DataGrid Name="Data" IsReadOnly="True" />
        </ScrollViewer>
    </DockPanel>
</Window>
