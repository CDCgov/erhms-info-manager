<Window x:Class="ERHMS.Sandbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERHMS.Sandbox"
        mc:Ignorable="d"
        Title="ERHMS Info Manager" Width="640" Height="480">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="FileOpen_Click" />
                <Separator />
                <MenuItem Header="E_xit" Click="FileExit_Click" />
            </MenuItem>
        </Menu>
        <ComboBox DockPanel.Dock="Top" Name="Views" SelectionChanged="Views_SelectionChanged" />
        <ScrollViewer>
            <DataGrid Name="ViewData" AutoGenerateColumns="True" IsReadOnly="True" />
        </ScrollViewer>
    </DockPanel>
</Window>
