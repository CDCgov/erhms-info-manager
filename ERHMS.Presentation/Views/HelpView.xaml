<UserControl x:Class="ERHMS.Presentation.Views.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrl="clr-namespace:ERHMS.Presentation.Controls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mark="clr-namespace:ERHMS.Presentation.Markup"
             xmlns:v="clr-namespace:ERHMS.Presentation.Views"
             mc:Ignorable="d"
             d:DesignWidth="640" d:DesignHeight="480">
    <mah:MetroTabControl>
        <mah:MetroTabItem Header="Workflow">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalAlignment="Top">
                <Canvas Width="600" Height="600">
                    <Canvas.Resources>
                        <Style x:Key="Header" TargetType="{x:Type Run}">
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </Style>
                        <Style TargetType="{x:Type Hyperlink}">
                            <Setter Property="Foreground" Value="#ff000000" />
                        </Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="FontSize" Value="{StaticResource LargerFontSize}" />
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </Canvas.Resources>
                    <Grid Canvas.Left="0" Canvas.Top="259.808">
                        <Ellipse Width="300" Height="300" Fill="#ff26b9f1" />
                        <TextBlock>
                            <Run Style="{StaticResource Header}">Pre-Deployment Phase</Run><LineBreak />
                            <LineBreak />
                            Rostering and credentialing<LineBreak />
                            Health screening<LineBreak />
                            Health and safety training<LineBreak />
                            Data management<LineBreak />
                            Information security<LineBreak />
                            <LineBreak />
                            Modules:<LineBreak />
                            <Hyperlink Command="{Binding RespondersCommand}">Responders</Hyperlink><LineBreak />
                            <Hyperlink Command="{Binding TemplatesCommand}">Templates</Hyperlink>
                        </TextBlock>
                    </Grid>
                    <Grid Canvas.Left="150" Canvas.Top="0">
                        <Ellipse Width="300" Height="300" Fill="#ffef3e45" />
                        <TextBlock>
                            <Run Style="{StaticResource Header}">Deployment Phase</Run><LineBreak />
                            <LineBreak />
                            On-site responder in-processing<LineBreak />
                            Health monitoring and surveillance<LineBreak />
                            Exposure assessment<LineBreak />
                            Activities documentation<LineBreak />
                            Communication<LineBreak />
                            <LineBreak />
                            Modules:<LineBreak />
                            <Hyperlink Command="{Binding IncidentsCommand}">Incidents</Hyperlink><LineBreak />
                            <Hyperlink Command="{Binding FormsCommand}">Forms</Hyperlink>
                        </TextBlock>
                    </Grid>
                    <Grid Canvas.Left="300" Canvas.Top="259.808">
                        <Ellipse Width="300" Height="300" Fill="#ff26b26b" />
                        <TextBlock>
                            <Run Style="{StaticResource Header}">Post-Deployment Phase</Run><LineBreak />
                            <LineBreak />
                            Responder out-processing<LineBreak />
                            Post-event health tracking<LineBreak />
                            After-action reporting<LineBreak /><LineBreak />
                            Modules:<LineBreak />
                            <Hyperlink Command="{Binding AnalysesCommand}">Analyses</Hyperlink><LineBreak />
                            <Hyperlink Command="{Binding DashboardsCommand}">Dashboards</Hyperlink>
                        </TextBlock>
                    </Grid>
                    <Grid Canvas.Left="250" Canvas.Top="273.205">
                        <Ellipse Width="100" Height="100" Fill="#f0808080" />
                        <TextBlock FontWeight="SemiBold" Foreground="#ffffffff">
                            Post-Event<LineBreak />
                            Tracking<LineBreak />
                            Decision
                        </TextBlock>
                    </Grid>
                    <ctrl:CappedPath Stroke="#ff878787" StrokeThickness="5" StrokeEndLineCap="{x:Static v:HelpView.ArrowLineCap}">
                        <ctrl:CappedPath.Data>
                            <PathGeometry Figures="{mark:Arc X=300, Y=323.205, Radius=250, StartAngle=165, EndAngle=140, Clockwise=True}" />
                        </ctrl:CappedPath.Data>
                    </ctrl:CappedPath>
                    <ctrl:CappedPath Stroke="#ff878787" StrokeThickness="5" StrokeEndLineCap="{x:Static v:HelpView.ArrowLineCap}">
                        <ctrl:CappedPath.Data>
                            <PathGeometry Figures="{mark:Arc X=300, Y=323.205, Radius=250, StartAngle=45, EndAngle=20, Clockwise=True}" />
                        </ctrl:CappedPath.Data>
                    </ctrl:CappedPath>
                    <ctrl:CappedPath Stroke="#ff878787" StrokeThickness="5" StrokeEndLineCap="{x:Static v:HelpView.ArrowLineCap}">
                        <ctrl:CappedPath.Data>
                            <PathGeometry Figures="{mark:Arc X=300, Y=323.205, Radius=250, StartAngle=285, EndAngle=260, Clockwise=True}" />
                        </ctrl:CappedPath.Data>
                    </ctrl:CappedPath>
                </Canvas>
            </ScrollViewer>
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Data Sources">
            <ScrollViewer />
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Responders">
            <ScrollViewer />
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Incidents">
            <ScrollViewer />
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Notes">
            <ScrollViewer />
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Roster">
            <ScrollViewer />
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Locations">
            <ScrollViewer />
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Forms">
            <ScrollViewer />
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Templates">
            <ScrollViewer />
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Assignments">
            <ScrollViewer />
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Analyses">
            <ScrollViewer />
        </mah:MetroTabItem>
        <mah:MetroTabItem Header="Dashboards">
            <ScrollViewer />
        </mah:MetroTabItem>
    </mah:MetroTabControl>
</UserControl>
