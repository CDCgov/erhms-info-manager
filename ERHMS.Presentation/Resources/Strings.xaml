<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">
    <System:String x:Key="ChangeRootDirectoryText">
        Change the root directory?
        This may cause existing data sources to stop working properly.
        {0} will attempt to copy your documents and restart when settings are saved.
    </System:String>

    <System:String x:Key="WelcomeText">
        Welcome to {0}!
        To get started, select a data source from the list and click Open.
        To add a new data source to the list, click Add &gt; New.
        To add an existing data source to the list, click Add &gt; Existing.
    </System:String>
</ResourceDictionary>
