<UserControl x:Class="ERHMS.Presentation.Controls.Filter"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:MahApps="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0"
               Target="{Binding ElementName=TextBox}">
            _Quick Filter
        </Label>
        <TextBox x:Name="TextBox"
                 Grid.Column="1"
                 AutomationProperties.Name="Quick Filter"
                 MahApps:TextBoxHelper.ClearTextButton="True"
                 Text="{Binding Value, ElementName=Root, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
