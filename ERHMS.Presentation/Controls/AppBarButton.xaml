<Button x:Class="ERHMS.Presentation.Controls.AppBarButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d" 
        d:DesignWidth="50" d:DesignHeight="50"
        Name="Root" Height="50" mah:ButtonHelper.PreserveTextCase="True" Margin="0,0,5,5" MinWidth="50" Style="{StaticResource MetroButton}">
    <Button.ContentTemplate>
        <DataTemplate>
            <StackPanel>
                <Rectangle Width="25" Height="20" Fill="{StaticResource BlackBrush}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Uniform" Visual="{Binding Icon, ElementName=Root}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
                <TextBlock FontSize="12" HorizontalAlignment="Center" Text="{Binding}" />
            </StackPanel>
        </DataTemplate>
    </Button.ContentTemplate>
</Button>
