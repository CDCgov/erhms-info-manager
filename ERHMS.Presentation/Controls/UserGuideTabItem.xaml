<TabItem x:Class="ERHMS.Presentation.Controls.UserGuideTabItem"
         x:Name="Root"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:Controls="clr-namespace:ERHMS.Presentation.Controls">
    <TabItem.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </TabItem.Resources>
    <StackPanel VerticalAlignment="Center">
        <TextBlock Margin="0,0,0,10">
            If your web browser does not open automatically, please navigate to the following URL:
        </TextBlock>
        <TextBlock>
            <Controls:WebHyperlink NavigateUri="{Binding NavigateUri, ElementName=Root}">
                <Run Text="{Binding NavigateUri, ElementName=Root}" />
            </Controls:WebHyperlink>
        </TextBlock>
    </StackPanel>
</TabItem>
