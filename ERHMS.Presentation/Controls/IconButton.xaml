<Button x:Class="ERHMS.Presentation.Controls.IconButton"
        x:Name="Root"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <AutomationProperties.Name>
        <Binding Converter="{StaticResource AccessTextToPlainTextConverter}"
                 ElementName="Root"
                 Path="AccessText" />
    </AutomationProperties.Name>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0"
                 Margin="-8"
                 SnapsToDevicePixels="False">
            <ContentPresenter Content="{Binding Icon, ElementName=Root}" />
        </Viewbox>
        <AccessText Grid.Row="1"
                    FontSize="12"
                    HorizontalAlignment="Center"
                    Text="{Binding AccessText, ElementName=Root}" />
    </Grid>
</Button>
